<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis配置文件-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jx.blogap1.dao.mapper.TagMapper">


    <select id="findTagsByArticleId" parameterType="long" resultType="com.jx.blogap1.dao.pojo.Tag">
        SELECT
            id,
            avatar,
            tag_name
            AS tagName
        FROM
            ms_tag
        WHERE
            id IN (
                    SELECT
                         tag_id
                    FROM
                         ms_article_tag
                    WHERE
                         article_id = #{articleI})
    </select>
    <select id="findHotsTagIds" parameterType="int" resultType="java.lang.Long">
        SELECT
            tag_id
        FROM
            ms_article_tag
        GROUP BY
            tag_id
        ORDER BY
            COUNT( * )  DESC
            LIMIT  #{limit}
    </select>

    <select id="finTagsByTagIds" parameterType="list" resultType="com.jx.blogap1.dao.pojo.Tag">
        SELECT
            id,
            avatar,
            tag_name AS tagName
        FROM
            ms_tag
        WHERE
            id IN
                <foreach collection="hotsTagIds" item="tagId" separator="," open="(" close=")">
                    #{tagId}
                </foreach>
    </select>



</mapper>