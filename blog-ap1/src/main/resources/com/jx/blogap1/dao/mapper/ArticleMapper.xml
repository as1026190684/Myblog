<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis配置文件-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jx.blogap1.dao.mapper.ArticleMapper">


    <select id="findHotArticleByViewCounts" parameterType="int" resultType="com.jx.blogap1.dao.pojo.Article">
        SELECT
            id,
            title
        FROM
            ms_article
        ORDER BY
            view_counts DESC
        LIMIT #{limit}

    </select>

    <select id="findNewArticleByCreateTime" parameterType="int" resultType="com.jx.blogap1.dao.pojo.Article">
        SELECT
            id,
            title,
            create_date
        FROM
            ms_article
        ORDER BY
            create_date DESC
            LIMIT #{limit}

    </select>

    <select id="listArchives"  resultType="com.jx.blogap1.dao.dos.Archives">
        SELECT YEAR
            (
            FROM_UNIXTIME( create_date / 1000 )) AS YEAR,
            MONTH (
            FROM_UNIXTIME( create_date / 1000 )) AS MONTH,
            count(*) AS count
        FROM
            ms_article
        GROUP BY
            YEAR,
            MONTH
    </select>
</mapper>
